<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="Entity.ProductType" table="producttype" schema="dbbestprice">
        <id name="id">
            <column name="id" sql-type="int(11) unsigned"/>
        </id>
        <property name="description">
            <column name="description" sql-type="text" not-null="true"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>